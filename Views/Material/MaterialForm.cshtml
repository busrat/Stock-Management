@model StockControl.Models.EntityFramework.Material
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Malzeme Grubu Ekle</h2>
<div id="mesaj"></div>
@using (Ajax.BeginForm("Save", "Material", new AjaxOptions { HttpMethod = "POST", UpdateTargetId = "mesaj" }))
{
        @Html.AntiForgeryToken()
  <div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.MaterialName, "Mal Grubu", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.MaterialName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.MaterialName, "", new { @class = "text-danger" })
        </div>
    </div>
        @Html.HiddenFor(m => m.Id)
        <button type="submit" class="btn btn-success">Kaydet</button>
    </div>
}

    @section scripts{
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>    }

