@model StockControl.Models.EntityFramework.User

@{
    Layout = null;
}
@if (Session["Kullanici"] == null)
{
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    </head>
    <body>
        <div class="container">
            <br><center><img src="~/logo2.png"</center>
            @using (Html.BeginForm("Login", "Security", FormMethod.Post))
            {
                <br>
                    <div class="wrapper fadeInDown">
                        <b style="color:black;">Kullanıcı Adı</b>
                        <center>
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı", style = "width:500px" })
                        </center>
                        <br>
                    </div>
                    <div class="form-group">
                        <b style="color:black;">Şifre</b>
                        <center>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Parola", style = "width:500px" })
                        </center>
                        <div class="text-danger">@ViewBag.Mesaj</div>
                    </div>
                <button type="submit" class="btn btn-block btn-success" style="width: 100px; height: 50px;">Giriş Yap</button>
            }
        </div>
</body>
</html>
}
